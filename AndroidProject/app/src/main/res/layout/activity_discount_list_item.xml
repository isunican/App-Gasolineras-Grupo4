<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/discountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nombre de descuento" />

    <TextView
        android:id="@+id/discountType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discountBrand"
        tools:text="Tipo de descuento" />

    <TextView
        android:id="@+id/discountValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/discountType"
        app:layout_constraintStart_toStartOf="@+id/discountBrand"
        app:layout_constraintTop_toTopOf="@+id/discountType"
        tools:text="Valor del descuento" />

    <TextView
        android:id="@+id/discountBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/discountName"
        app:layout_constraintTop_toBottomOf="@+id/discountName"
        tools:text="CompaÃ±ia" />

    <CheckBox
        android:id="@+id/chkActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Activo"
        app:layout_constraintStart_toStartOf="@+id/discountValue"
        app:layout_constraintTop_toBottomOf="@+id/discountType" />
</androidx.constraintlayout.widget.ConstraintLayout>